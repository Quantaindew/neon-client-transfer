{
  "name": "neon-portal",
  "version": "2.0.0",
  "description": "Javasript client-side module for creating transfer transactions from Solana EVM to Neon EVM",
  "files": [
    "./dist/**/*"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "npm-run-all test:*",
    "test:lint": "eslint typescript/src",
    "test:audit": "npm audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonlabsorg/neon-client-transfer.git"
  },
  "keywords": [
    "neonlabs",
    "neon-evm",
    "erc20",
    "spl",
    "token-transfering"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neonlabsorg/neon-client-transfer/issues"
  },
  "homepage": "https://github.com/neonlabsorg/neon-client-transfer#readme",
  "dependencies": {
    "@solana/spl-token": "^0.1.8",
    "@solana/wallet-adapter-react": "0.13.1",
    "@solana/web3.js": "^1.31.0",
    "@web3-react/core": "6.1.9",
    "big.js": "^6.2.1",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/plugin-transform-modules-commonjs": "7.18.2",
    "@babel/preset-env": "7.16.11",
    "@types/big.js": "^6.1.6",
    "@types/crypto-js": "^4.1.1",
    "@types/react": "17.0.38",
    "@typescript-eslint/parser": "^5.40.0",
    "babel-loader": "8.2.3",
    "crypto-js": "^4.1.1",
    "eslint": "8.11.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "react": "^17.0.2",
    "stream-browserify": "^3.0.0",
    "typescript": "^4.8.4",
    "web3": "^1.8.0",
    "web3-core": "^1.8.0",
    "web3-eth-contract": "^1.8.0",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0"
  }
}
